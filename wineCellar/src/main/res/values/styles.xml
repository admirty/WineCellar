<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.@android:style/Theme.Holo.NoActionBar"
        -->
    </style>

    <!-- dark default theme-->
    <style name="Theme.AppCompat.Dialog.Alert" parent="android:Theme.Holo.NoActionBar" />

    <!-- Application theme. -->
    <!-- <style name="AppTheme" parent="AppBaseTheme">-->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowBackground">@drawable/logo_a_bg_2</item>
        <item name="android:listDivider">@color/GRAY</item>
        <item name="android:dividerHeight">1px</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="App_main" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/logo_a_bg_1</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="wine_main_theme" parent="@android:style/Theme" >
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/logo_a_bg_2</item>
    </style>

    <style name="main_login_theme" parent="@android:style/Theme" >
        <item name="android:windowNoTitle">true</item>  
        <item name="android:windowBackground">@drawable/logo_a_bg_0</item>
    </style>

    <style name="NavDrawerTextStyle" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
    </style>



</resources>
